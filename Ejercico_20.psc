Algoritmo Ejercicio_20
	// 1. Definir variables
	Definir t1, t2, t3, total Como Real;
	
	// 2. Entrada de datos
	Escribir "Digite el primer tiempo";
	Leer t1;
	Escribir "Digite el segundo tiempo";
	Leer t2;
	Escribir "Digite el tercer tiempo";
	Leer t3;
	
	// 3. Proceso (suma de tiempos)
	total <- t1 + t2 + t3;
	
	// 4. Salida de resultados
	Escribir "El total del tiempo en el viaje fue de: ", total;
	
FinAlgoritmo
