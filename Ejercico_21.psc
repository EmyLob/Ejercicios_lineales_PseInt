Algoritmo Ejercicio_21
	// 1. Definir variables
	Definir agua, luz, gas, total Como Real;
	
	// 2. Entrada de datos
	Escribir "Digite el consumo del agua";
	Leer agua;
	Escribir "Digite el consumo del gas";
	Leer gas;
	Escribir "Digite el consumo de la luz";
	Leer luz;
	
	// 3. Proceso (suma de consumos)
	total <- luz + gas + agua;
	
	// 4. Salida de resultados
	Escribir "El consumo total fue de: ", total;
	
FinAlgoritmo

